            <Button x:Name="Cezar" Content="Szyfr Cezara" Margin="5" MinWidth="120" Height="30" Style="{StaticResource Tryb}" Click="ZmienNaCezar"/>
            <Button x:Name="Playfair" Content="Szyfr Playfaira" Margin="5" MinWidth="120" Height="30" Style="{StaticResource Tryb}" Click="ZmienNaPlayfair" />

        </StackPanel>
